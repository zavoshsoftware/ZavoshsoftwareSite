<body class="k-rtl">
    <section class="vbox">
        <header class="bg-dark dk header navbar navbar-fixed-top-xs">
            <div class="navbar-header aside-md">
                <a class="btn btn-link visible-xs" data-toggle="class:nav-off-screen" data-target="#nav"><i class="fa fa-bars"></i></a><a href="/" class="navbar-brand">
                    <img src="~/images/logo.png" class="m-r-sm">
                </a><a class="btn btn-link visible-xs" data-toggle="dropdown" data-target=".nav-user"><i class="fa fa-cog"></i></a>
            </div>
            <ul class="nav navbar-nav hidden-xs"></ul>
            <ul class="nav navbar-nav navbar-right hidden-xs nav-user">
                <li class="hidden-xs">
                    <a href="#" class="dropdown-toggle dk" data-toggle="dropdown">
                        <i class="fa fa-bell"></i><span class="badge badge-sm up bg-danger m-l-n-sm count">
                            0
                        </span>
                    </a>
                    <section class="dropdown-menu aside-xl">
                        <section class="panel bg-white">
                            <header class="panel-heading b-light bg-light">
                                <strong>
                                    شما <span class="count">

                                    </span> اعلان دارید
                                </strong>
                            </header>

                            <footer class="panel-footer text-sm"></footer>
                        </section>
                    </section>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <span class="thumb-sm avatar pull-left">
                            <img src="~/images/avatar_default.jpg" />
                        </span>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu animated fadeInRight">
                        <span class="arrow top"></span>
                        <li><a href="#">پروفایل</a> </li>
                        <li><a href="#">Help</a> </li>
                        <li class="divider"></li>
                        <li>
                            @Html.ActionLink("خروج", "LogOff", "Account")
                        </li>
                    </ul>
                </li>
            </ul>
        </header>
        <section>
            <section class="hbox stretch">
                <!-- .aside -->
                <aside class="bg-dark lter aside-md hidden-print nav-xs-right" id="nav" style="width:260px;">
                    <section class="vbox">

                        <section class="w-f scrollable">
                            <div class="slim-scroll" data-height="auto" data-disable-fade-out="true" data-distance="0" data-size="5px" data-color="#333333">
                                <!-- nav -->
                                @Html.Partial("BackEndLayout/_BackEndMenu")

                              
                                <!-- / nav -->
                            </div>
                        </section>

                    </section>
                </aside>
                <!-- /.aside -->
                <section id="content">
                    <section class="vbox">
                        <section class="scrollable padder" style="margin-top: 5px;">
                            @RenderBody()
                        </section>
                    </section>
                    <a href="#" class="hide nav-off-screen-block" data-toggle="class:nav-off-screen" data-target="#nav"></a>
                </section>
            </section>
        </section>
    </section>


    <script type="text/javascript">
        $(document).ready(function () {
            var URL = window.location.pathname;
            if (URL.includes('Blogs')) {
                $('.menuitem').removeClass('active');
                $('#blogLi').addClass('active');
            }

            else if (URL.includes('/ContactusForms')) {
                $('.menuitem').removeClass('active');
                $('#conLi').addClass('active');
            }

            else if (URL.includes('/product')) {
                $('.menuitem').removeClass('active');
                $('#proLi').addClass('active');
            }
            else if (URL.includes('/Catalogs')) {
                $('.menuitem').removeClass('active');
                $('#catLi').addClass('active');
            }
            else if (URL.includes('/service')) {
                $('.menuitem').removeClass('active');
                $('#serviceLi').addClass('active');
            } 
            else if (URL.includes('/2f4d1d33')) {
                $('.menuitem').removeClass('active');
                $('#sliLi').addClass('active');
            }
            else if (URL.includes('/TextTypeItems')) {
                $('.menuitem').removeClass('active');
                $('#textLi').addClass('active');
            } 
            else if (URL.includes('/NewsLetters')) {
                $('.menuitem').removeClass('active');
                $('#newsLi').addClass('active');
            }
            else if (URL.includes('/Sliders')) {
                $('.menuitem').removeClass('active');
                $('#slideLi').addClass('active');
            }
            else if (URL.includes('/Gallery')) {
                $('.menuitem').removeClass('active');
                $('#galleryLi').addClass('active');
            } 
            else if (URL.includes('/Certificates')) {
                $('.menuitem').removeClass('active');
                $('#cerLi').addClass('active');
            }
            
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
